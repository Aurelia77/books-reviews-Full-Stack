generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id            String   @id @default(ulid())
  title         String
  authors       String[]
  description   String
  categories    String[]
  pageCount     Int
  publishedDate String
  publisher     String
  imageLink     String
  language      String
  isFromAPI     Boolean
  totalRating   Int
  count         Int
}

model User {
  id              String   @id @default(ulid())
  email           String   @unique
  userName        String
  imgURL          String
  description     String
  booksRead       Json
  booksInProgress Json
  booksToRead     Json
  friends         String[]
  isMyFriend      Boolean?
  isAdmin         Boolean
}
